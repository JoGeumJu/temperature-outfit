{
  "swagger": "2.0",
  "info": {
    "description": "",
    "version": "1.0.0",
    "title": "Temperature Outfit API"
  },
  "host": "localhost:3000",
  "tags": [
    {
      "name": "category",
      "description": "카테고리"
    },
    {
      "name": "product",
      "description": "옷 & 악세서리"
    },
    {
      "name": "outfit",
      "description": "옷차림"
    }
  ],
  "paths": {
    "/api/category": {
      "get": {
        "tags": [
          "category"
        ],
        "description": "카테고리 전체 조회",
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/CategoryResponse"
              }
            }
          }
        }
      }
    },
    "/api/product": {
      "get": {
        "tags": [
          "product"
        ],
        "produces": [
          "application/json"
        ],
        "description": "내 옷 & 악세서리 목록 조회",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "query": {
                  "type": "string"
                },
                "categoryId": {
                  "type": "string"
                },
                "color": {
                  "type": "string"
                },
                "page": {
                  "type": "integer",
                  "minimum": 1,
                  "default": 1
                },
                "limit": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 100,
                  "default": 10
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ProductResponse"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["product"],
        "description": "내 옷 & 악세서리 등록",
        "produces": ["application/json"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "image",
            "in": "formData",
            "type": "file"
          },
          {
            "name": "name",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "categoryId",
            "in": "formData",
            "required": true,
            "type": "string"
          },
          {
            "name": "color",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "등록 성공",
            "schema": {
              "$ref": "#/definitions/ProductResponse"
            }
          }
        }
      }
    },
    "/api/product/{productId}": {
      "get": {
        "tags": ["product"],
        "description": "내 옷 & 악세서리 조회",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/ProductResponse"
            }
          },
          "404": {
            "description": "일치하는 옷 & 악세서리가 없음 or 내 옷 & 악세서리가 아님"
          }
        }
      }
    },
    "/api/outfit": {
      "get": {
        "tags": [
          "outfit"
        ],
        "produces": [
          "application/json"
        ],
        "description": "내 옷차림 목록 조회",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "startDate": {
                  "type": "string",
                  "format": "date-time"
                },
                "endDate": {
                  "type": "string",
                  "format": "date-time"
                },
                "minRating": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 10,
                  "default": 0
                },
                "maxRating": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 10,
                  "default": 10
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/OutfitResponse"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["outfit"],
        "description": "내 옷차림 등록",
        "produces": ["application/json"],
        "consumes": ["multipart/form-data"],
        "parameters": [
          {
            "name": "date",
            "in": "formData",
            "required": true,
            "type": "string",
            "format": "date",
            "default": "2022-01-01"
          },
          {
            "name": "image",
            "in": "formData",
            "type": "file"
          },
          {
            "name": "productsId",
            "in": "formData",
            "required": true,
            "type": "string",
            "description": "여러개를 ','로 구별한다. ex) id1,id2,id3"
          },
          {
            "name": "comment",
            "in": "formData",
            "type": "string"
          },
          {
            "name": "rating",
            "in": "formData",
            "type": "integer",
            "minimum": 0,
            "maximum": 10,
            "default": 0
          }
        ],
        "responses": {
          "201": {
            "description": "등록 성공",
            "schema": {
              "$ref": "#/definitions/OutfitResponse"
            }
          },
          "400": {
            "description": "date 누락"
          }
        }
      }
    },
    "/api/outfit/{outfitId}": {
      "get": {
        "tags": ["outfit"],
        "description": "내 옷차림 조회",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "outfitId",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "cuid"
          }
        ],
        "responses": {
          "200": {
            "description": "조회 성공",
            "schema": {
              "$ref": "#/definitions/OutfitResponse"
            }
          },
          "404": {
            "description": "일치하는 옷차림이 없음"
          }
        }
      }
    }
  },
  "definitions": {
    "CategoryResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "top"
        },
        "name": {
          "type": "string",
          "example": "상의"
        },
        "children": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "sleeveless"
              },
              "name": {
                "type": "string",
                "example": "민소매"
              }
            }
          }
        }
      }
    },
    "ProductResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "cuid",
          "example": "cl5qjhkic000409mi4nmw7epr"
        },
        "name": {
          "type": "string"
        },
        "categoryId": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "OutfitResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "cuid",
          "example": "cl5qjhkic000409mi4nmw7epr"
        },
        "date": {
          "type": "string",
          "format": "date"
        },
        "imageUrl": {
          "type": "string"
        },
        "products": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductResponse"
          }
        },
        "comment": {
          "type": "string"
        },
        "rating": {
          "type": "integer",
          "format": "int32",
          "minimum": 0,
          "maximum": 10
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
